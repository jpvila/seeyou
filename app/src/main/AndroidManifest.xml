    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.androidhive.materialtabs.activity.IconTabsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.androidhive.materialtabs.activity.ScrollableTabsActivity"
            android:label="@string/title_activity_scrollable_tabs"
            android:parentActivityName="info.androidhive.materialtabs.activity.MainActivity" >
        </activity>
        <activity
            android:name="info.androidhive.materialtabs.activity.SimpleTabsActivity"
            android:label="@string/title_activity_simple_tabs"
            android:parentActivityName="info.androidhive.materialtabs.activity.MainActivity" >
        </activity>
        <activity
            android:name="info.androidhive.materialtabs.activity.IconTextTabsActivity"
            android:label="@string/title_activity_icon_text_tabs"
            android:parentActivityName="info.androidhive.materialtabs.activity.MainActivity" >
        </activity>

        <activity
            android:name="info.androidhive.materialtabs.activity.CustomViewIconTextTabsActivity"
            android:label="@string/title_activity_custom_view_icon_text_tabs"
            android:parentActivityName="info.androidhive.materialtabs.activity.MainActivity" >
        </activity>

    </application>

</manifest>
